<h2 class="page-header">
  <% if current_user%>
    <%= link_to  "Add post ", new_post_path, class:'btn btn-info' %>
  <% end %>
</h2>

<div class="row">
   <div class="col-md-10">
    <div class="recent-upload">
        <h4>RECENT HOTTEST NEWS TO READ</h4>
    </div>
      <div class="row">
        <% if @posts.exists? %>
            <% @posts.each do |post| %>
               <div class="col-md-4">
                  <div class="panel panel-default" >
                    <div class="panel panel-doby" id="post-index">
                      <%= link_to post_path(post) do %>
                          <h5><%=  raw post.title.truncate(50) %></h5>
                          <% if post.coverpicture.present? %>
                            <%= image_tag  "#{post.coverpicture}", width:'100%', height:'140px' %>
                          <% else %>
                            <%= image_tag  "img/image2.jpg", width:'100%', height:'140px' %>
                          <% end %>
                          <%= raw post.body.truncate(100)%><br>
                      <% end %>
                      <p>
                        <strong>Posted on: </strong><%= post.created_at.to_time.strftime('%b %e, %Y')%><br>
                        <strong>Posted by: </strong><%= post.user.name%>
                      </p>
                    </div>
                  </div> 
               </div>
            <% end%>
        <!-- pagination -->
        <% else %>
           <p>No post available!!</p>
        <% end %> 
      </div> 
  </div> 
  <div class="col-md-2" id="category">
        <% if @categories.exists%>
            <div class="panel panel-nfio">
                <div class="panel panel-heading">
                    <h4 >Categories</h4>
                </div>
                <div class="panel panel-body">
                   <% @categories.each do |category|%>
                        <li class="list-group-item"><%= link_to category.name, category_path(category), class:'glyphicon glyphicon-film'  %></li>
                    <%end%> 
                </div>
            </div>
        <%else%>
        <p>No categories found</p>
        <%end%>
    </div>
</div>


