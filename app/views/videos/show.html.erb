<i class="glyphicon glyphicon-film"></i><i class="glyphicon glyphicon-music"></i><i class="glyphicon glyphicon-film"></i>
<h2 class="page-header"><i class="glyphicon glyphicon-film"></i> Here you get your favorate musics audio <i class="glyphicon glyphicon-film"></i></h2>
<div class="row">
        <div class="col-xs-4 col-md-4">
            <%if @videos.exists%>
              <% @videos.each do |song|%>
                <div class="panel panel-info">
                    <div class="panel-body">
                      <%if song.youtube_link.present?%>
                           <iframe width="150" height="100" src="https://www.youtube.com/embed/#{<%= song.youtube_link %>}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                        <%else%>
                            <%= image_tag  "img/image2.jpg", class:'thumbnail', width:'30%' %>
                        <% end %>
                            <li><strong>Song name: </strong><%= song.song_title%></li>
                            <li><strong>Artist: </strong><%= song.singer_name %></li>
                            <li><strong>Upload on:</strong><%= song.created_at.to_time.strftime('%b %e, %Y ') %></li>
                            
                            <%= link_to  "Play", video_path(song), class:'glyphicon glyphicon-ok btn btn-success' %> <%= link_to  "..Related songs...", category_path(:id => song.category_id), class:'btn btn-default readMore' %>
                    </div>
                </div>
             <% end %>          
            <%else%>
                <p>No song published yet</p>
            <% end %>
            <%= will_paginate @videos%>
   </div>
    <div class="col-xs-4 col-md-5">
        <div class="panel panel-default">
            <div class="panel panel-body">
               <%if @video.youtube_link.present?%>
                    <%= video_tag  "#{@video.youtube_link}", class:'thumbnail', width:'40%' %>
                <%else%>
                    <%= image_tag  "img/image2.jpg", class:'thumbnail', width:'40%' %>
                <% end %>
                
            </div>
            <div class="panel panel-footer">
              <li><strong>Song name: </strong><%= @video.song_title%></li>
                <li><strong>Artist: </strong><%= @video.singer_name%></li>
                <li><strong>Upload by: </strong><%= @video.user.name %></li>
                <li><strong>Upload on:</strong><%= @video.created_at.to_time.strftime('%A (%b %e, %Y at %H : %M %p)') %></li>  
            </div>
        </div>
        <% if @related.exists%>
          <div class="panel panel-default">
             <div class="panel panel-heading">
                 <h4><i class="glyphicon glyphicon-list"> Related Songs</i></h4>
             </div>
             
                <% @related.each do |related|%>
                  <div class="panel-body">
                    <% if related.youtube_link.present? %>
                       <%= video_tag  "#{related.youtube_link}", class:'thumbnail', width:'20%' %>
                    <%else%>
                       <%= image_tag  "img/image2.jpg", class:'thumbnail', width:'20%' %>
                    <%end%>
                    <li><strong>Song name: </strong><%= related.song_title%></li>
                    <li><strong>Artist: </strong><%= related.singer_name%></li>
                    <%= link_to  "Play", audio_path(related), class:'glyphicon glyphicon-ok btn btn-success' %>
                </div>
                <div class="panel-footer">  
                </div>
                <% end%>
             </div>
             <%else%>  
             <p>No Music with the same category found!</p>
             <%end%>
            <%= will_paginate @related%>
          
    
        
    </div>
    <div class="col-xs-4 col-md-2">
        <% if @categories.exists%>
          <% @categories.each do |category|%>
                <li class="list-group-item"><%= link_to category.song, category_path(category), class:'glyphicon glyphicon-music'  %></li>
          <%end%>
        <%else%>
        <p>No categories found</p>
        <%end%>
    </div>
</div>

