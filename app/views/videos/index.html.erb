<h2 class="page-header">
  <% if current_user%>
    <%= link_to  "Upload ", new_video_path, class:'btn btn-info pull-right' %>
  <% end %>
</h2>
<div class="row">
        <div class="col-md-10">
            <div class="recent-upload">
                <h4>RECENT UPLOADED VIDEOS</h4>
            </div>
            <%if @videos.exists? %>
                 <div class="row">
                  <% @videos.each do |song|%>
                     <div class="col-md-4">
                        <div class="panel panel-info">
                            <div class="panel-body">
                                <%if song.youtube_link.present?%>
                               <iframe width="100%" height="200" src="https://www.youtube.com/embed/<%= song.youtube_link %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                <%else%>
                                    <%= image_tag  "img/image2.jpg", class:'thumbnail', width:'30%' %>
                                <% end %>
                                    <li><strong>Song name: </strong><%= song.song_title%></li>
                                    <li><strong>Artist: </strong><%= song.singer_name %></li>
                                    <li><strong>Upload on:</strong><%= song.created_at.to_time.strftime('%b %e, %Y ') %></li>
                                    
                                    <%= link_to  "View", video_path(song), class:'glyphicon glyphicon-ok btn btn-block btn-success' %>
                            </div>
                        </div> 
                    </div>
                  <% end %>
            <!-- pagination -->
                </div>          
            <%else%>
                <p>No song published yet</p>
            <% end %>
       </div>
       
    <div class="col-md-2" id="category">
        <% if @types.exists%>
            <div class="panel panel-nfio">
                <div class="panel panel-heading">
                    <h4 >Categories</h4>
                </div>
                <div class="panel panel-body">
                   <% @types.each do |type|%>
                        <li class="list-group-item"><%= link_to type.name, type_path(type), class:'glyphicon glyphicon-film'  %></li>
                    <%end%> 
                </div>
            </div>
        <%else%>
        <p>No categories found</p>
        <%end%>
    </div>
</div>

