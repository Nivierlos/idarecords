<!DOCTYPE html>
<html>
  <head>
    <title>Idarecords</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
   <nav class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to  "Idarecords", root_path, class:'btn navbar-brand' %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= params[:controller] == 'about' ? 'active' : ''%>"><%= link_to  "About", about_path%></li>
            <li class="<%= params[:controller] == 'home' ? 'active' : ''%>"><%= link_to  "Home", root_path%></li>
            <li class="<%= params[:controller] == 'audios' ? 'active' : ''%>"><%= link_to  "Audios", audios_path%></li>
            <li class="<%= params[:controller] == 'videos' ? 'active' : ''%>"><%= link_to  "Videos", videos_path%></li>
            <li class="<%= params[:controller] == 'posts' ? 'active' : ''%>"><%= link_to  "Blog", posts_path%></li>
            <li class="<%= params[:controller] == 'contacts' ? 'active' : ''%>"><%= link_to  "Contact", contact_path%></li>
          </ul>
          <div class="container">
            <ul class="navbar navbar-right" id="login">
             <%= link_to  " Login ", root_path, class:'glyphicon glyphicon-user pull-right' %>
            </ul>
          </div>
        </div><!--/.nav-collapse -->
    </nav>

    <div class="container" id="container">

    <% if params[:controller]== 'home' %>

      <form class="form  form-inline pull-right">
            <div class="form-group">
              <input type="text" placeholder="...type and search..." class="form-control">
            </div>
            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-search"> Search</i></button>
          </form>
    <%end%>
    <br>
    <br>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

      <%= yield %>

    </div><!-- /.container -->
    <footer>
       &copy; copyright Idarecords | Alright reserved
     </footer>
  </body>
</html>
