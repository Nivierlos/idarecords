<!DOCTYPE html>
<html>
  <head>
    <title>Idarecords</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
   <nav class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to  "Idarecords", root_path, class:'btn navbar-brand' %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= params[:controller] == 'about' ? 'active' : ''%>"><%= link_to  "About", about_path%></li>
            <li class="<%= params[:controller] == 'home' ? 'active' : ''%>"><%= link_to  "Home", root_path%></li>
            <li class="<%= params[:controller] == 'audios' ? 'active' : ''%>"><%= link_to  "Audios", audios_path%></li>
            <li class="<%= params[:controller] == 'videos' ? 'active' : ''%>"><%= link_to  "Videos", videos_path%></li>
            <li class="<%= params[:controller] == 'posts' ? 'active' : ''%>"><%= link_to  "Blog", posts_path%></li>
            <li class="<%= params[:controller] == 'contacts' ? 'active' : ''%>"><%= link_to  "Contact", contact_path%></li>
            <%if current_user %>
            <li class="dropdown">
            <a id="upload"> <i class="glyphicon glyphicon-upload ">NEW</i><span class="caret"></span></a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to  "Audio", new_audio_path%></li>
              <li><%= link_to  "Video", new_video_path%></li>
              <li><%= link_to  "Post", new_post_path%></li>
            </ul>
          </li>
          <% end %>                
          </ul>
          <div class="container">
            <ul class="navbar navbar-right" id="login">
             <%if current_user %>         
                <%= current_user.email %>&nbsp;&nbsp; 
                <%= link_to  "Logout ", destroy_user_session_path, method: :delete, class:' pull-right' %>
              <% else%>
             <%= link_to  " Login ", new_user_session_path, class:'glyphicon glyphicon-user pull-right' %>
             <% end %>
            </ul>
          </div>
        </div><!--/.nav-collapse -->
    </nav>

    <div class="container" id="container">

      <%= render  "partials/search" %>     
    <br>
    <br>
    <% if flash[:notice]%>
      <div class="alert alert-success"><%= flash[:notice]%></div>
    <% end %>
    <% if flash[:alert]%>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

      <%= yield %>

    </div><!-- /.container -->
    <footer>
       &copy; copyright Idarecords | Alright reserved
     </footer>


     <script>
       var dropdown = document.querySelector('.dropdown');
       $(function(){
         $('.dropdown').hover(function(){
           $('.dropdown-menu').css('display','block');
         });
         $('.dropdown').mouseleave(function(){
           $('.dropdown-menu').css('display','none');
         });
       });
     </script>
  </body>
</html>
